<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_educonnect_estudiante"
        android:label="@string/app_estudiante"
        android:roundIcon="@mipmap/ic_educonnect_estudiante_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EduConnect"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.Apuntes.AgregarApunteActivity"
            android:exported="false" />
        <activity
            android:name=".ui.cursos.trabajo.EnviarPdfActivity"
            android:exported="false" />
        <activity
            android:name=".ui.cursos.trabajo.EnviarFotoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.cursos.trabajo.EnviarTrabajoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.cursos.trabajo.TrabajoRevisadoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.cursos.ListTareasActivity"
            android:exported="false" />
        <activity
            android:name=".Login.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".Splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_estudiante" />
    </application>

</manifest>