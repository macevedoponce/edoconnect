<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bg_dialog_bottom"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/ivCloseDialogDetalleTarea"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_close"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTituloTarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Investigación de medios de comunicación"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/primary"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/fecha_limite"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/primary"/>

        <TextView
            android:id="@+id/tvFechaLimiteTarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:text="15/07/2023"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#F44336"/>

        <TextView
            android:id="@+id/tvDescripcionTarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="20dp"
            android:justificationMode="inter_word"
            android:text="Estimados estudiantes la tarea para esta sema es investigar un medio de comunicación en particular, como una revista, un periódico o un canal de televisión, y escribir un informe sobre su historia, objetivos y audiencia."
            android:textSize="12sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/primary"/>

    </LinearLayout>


</LinearLayout>